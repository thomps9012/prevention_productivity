@page
@model prevention_productivity.Pages.Events.Summary.EditModel

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>EventSummary</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventSummary.EventSummaryId" />
            <div class="form-group">
                <label asp-for="EventSummary.EventId" class="control-label"></label>
                <select asp-for="EventSummary.EventId" class="form-control" asp-items="ViewBag.EventId"></select>
                <span asp-validation-for="EventSummary.EventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventSummary.Attendees" class="control-label"></label>
                <input asp-for="EventSummary.Attendees" class="form-control" />
                <span asp-validation-for="EventSummary.Attendees" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventSummary.Challenges" class="control-label"></label>
                <input asp-for="EventSummary.Challenges" class="form-control" />
                <span asp-validation-for="EventSummary.Challenges" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventSummary.Outcomes" class="control-label"></label>
                <input asp-for="EventSummary.Outcomes" class="form-control" />
                <span asp-validation-for="EventSummary.Outcomes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventSummary.Notes" class="control-label"></label>
                <input asp-for="EventSummary.Notes" class="form-control" />
                <span asp-validation-for="EventSummary.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventSummary.NextSteps" class="control-label"></label>
                <input asp-for="EventSummary.NextSteps" class="form-control" />
                <span asp-validation-for="EventSummary.NextSteps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventSummary.TeamMemberID" class="control-label"></label>
                <select asp-for="EventSummary.TeamMemberID" class="form-control" asp-items="ViewBag.TeamMemberID"></select>
                <span asp-validation-for="EventSummary.TeamMemberID" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <form method="post" style="display:inline;">
                    <!--
                        
                     <input type="hidden" name="id" value="@Model.EventSummary.EventSummaryId" />
                    -->
                    <input type="hidden" name="status" value="save" />
                    <button class="btn btn-danger" type="submit">Save</button>
                </form>
                <form method="post" style="display:inline;">
                   <!--
                   <input type="hidden" name="id" value="@Model.EventSummary.EventSummaryId" />
                       
                   --> 
                    <input type="hidden" name="status" value="delete" />
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </div
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
