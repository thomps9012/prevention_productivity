@page
@model prevention_productivity.Pages.Events.Summary.IndexModel

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventSummary[0].Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventSummary[0].Attendees)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventSummary[0].Challenges)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventSummary[0].Outcomes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventSummary[0].Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventSummary[0].NextSteps)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventSummary[0].TeamMember)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventSummary[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EventSummary) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attendees)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Challenges)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Outcomes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextSteps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamMember.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.EventSummaryId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.EventSummaryId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.EventSummaryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
