@page
@model prevention_productivity.Pages.SchoolReports.DetailsModel

@{
     ViewData["Title"] = "Details";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h4>SchoolReport</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolReport.Curriculum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolReport.Curriculum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolReport.LessonPlan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolReport.LessonPlan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolReport.SchoolName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolReport.SchoolName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolReport.TopicsCovered)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolReport.TopicsCovered)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolReport.StudentList)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolReport.StudentList)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolReport.Challenges)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolReport.Challenges)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolReport.Successes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolReport.Successes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolReport.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolReport.Notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolReport.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolReport.Status)
        </dd>
    </dl>
</div>
<div>
      @if (Model.SchoolReport.Status != ApprovalStatus.Approved)
    {
        @if ((await AuthorizationService.AuthorizeAsync(User, Model.SchoolReport,
       AuthOperations.Approve)).Succeeded)
        {
                <form method="post" style="display:inline;">
                    <input type="hidden" name="id" value="@Model.SchoolReport.SchoolReportId" />
                    <input type="hidden" name="status" value="@ApprovalStatus.Approved" />
                    <button class="btn btn-success" type="submit">Approve</button>
                </form>
        }
    }
    @if (Model.SchoolReport.Status != ApprovalStatus.Rejected)
    {
        @if ((await AuthorizationService.AuthorizeAsync(User, Model.SchoolReport,
       AuthOperations.Reject)).Succeeded)
        {
            <form method="post" style="display:inline;">
                <input type="hidden" name="id" value="@Model.SchoolReport.SchoolReportId" />
                <input type="hidden" name="status" value="@ApprovalStatus.Rejected" />
                <button class="btn btn-danger" type="submit">Reject</button>
            </form>
        }
    }
    <div>
        @if ((await AuthorizationService.AuthorizeAsync(User, Model.SchoolReport,
        AuthOperations.Update)).Succeeded)
        {   
             <a asp-page="./Edit" asp-route-id="@Model.SchoolReport.SchoolReportId">Edit</a> 
             <text> | </text>
        }
    <a asp-page="./Index">Back to List</a>
</div>
</body>
</html>
