@page
@model prevention_productivity.Pages.SchoolReports.IndexModel

@{
   ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New School Report</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
            Lesson Plan
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolReport[0].Curriculum)
            </th>
            <th>
               School
            </th>
           <th>
                  Team Member
           </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolReport[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SchoolReport) {
        <tr>
            
             @switch(item.Status){
                 case ApprovalStatus.Pending:
                    <td id="pending">
                    @Html.DisplayFor(modelItem => item.LessonPlan)
                    </td>
                    break;
                case ApprovalStatus.Approved:
                    <td id="approved">
                    @Html.DisplayFor(modelItem => item.LessonPlan)
                    </td>
                    break;
                case ApprovalStatus.Rejected:
                    <td id="rejected">
                       @Html.DisplayFor(modelItem => item.LessonPlan)
                    </td>
                    break;
             }
            <td>
                @Html.DisplayFor(modelItem => item.Curriculum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolName)
            </td>
           <td>
                        @Html.DisplayFor(modelItem => 
                            Model.TeamMember.FirstOrDefault(x => x.Id == item.TeamMemberId).FullName)
           </td>
            @switch(item.Status){
                 case ApprovalStatus.Pending:
                    <td id="pending">
                    @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    break;
                case ApprovalStatus.Approved:
                    <td id="approved">
                    @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    break;
                case ApprovalStatus.Rejected:
                    <td id="rejected">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    break;
             }
            <td>
                 @if ((await AuthorizationService.AuthorizeAsync(User, item, AuthOperations.Update)).Succeeded)
                        {
                <a asp-page="./Edit" asp-route-id="@item.SchoolReportId">Edit</a>
                 <text> | </text>
                        }                
                <a asp-page="./Details" asp-route-id="@item.SchoolReportId">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <text> | </text>                
                <a asp-page="./Delete" asp-route-id="@item.SchoolReportId">Delete</a>
                        }
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
