@page
@model prevention_productivity.Pages.Grants.IndexModel

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Grant Information</title>
</head>
<body>
     @if (User.IsInRole("Admin"))
    {
    <p>
    <a asp-page="Create">Add New Grant</a>
    </p>
    }
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GrantProgram[0].Name)
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.GrantProgram) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                        <text> | </text>
                        <a asp-page = "./Delete" asp-route-id = "@item.Id" > Delete </a>
                        <text> | </text>
                 }
                        <a asp-page = "./Details" asp-route-id = "@item.Id" > Details </a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
