@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Prevention Homepage</h1>
    <br />
    <p>The time on the server is @DateTime.Now</p>
    <br />
    <h3>On this application you can:</h3>
    <hr />
    <br />
    <h4><a asp-page="/ProductivityLogs/Create">Create Productivity Logs</a> and <a asp-page="/ProductivityLogs/Index">Track Your Productivity</a> throughout the week</h4>
    <br />
    <h4><a asp-page="/Events/Create">Create Events</a>, in order to meet grant Goals</h4>
    <br />
    <h4><a asp-page="/Grants/Create">Add Grants</a> or track <a asp-page="/Grants/Index">Existing Ones</a></h4>
    <br />
    <h4><a asp-page="/Contacts/Index">View Established Contacts</a>, or <a asp-area="" asp-page="/Contacts/Create">Add New Contacts</a></h4>
    <br />
    <h4><a asp-page="/Events/Index">View Events</a>  and <a asp-page="/Events/Summary/Index">Event Summaries</a></h4>
    <br />

</div>

