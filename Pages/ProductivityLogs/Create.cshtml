@page
@model prevention_productivity.Pages.ProductivityLogs.CreateModel

@{
ViewData["Title"] = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Log Creation</title>
</head>
<body>

<h4>Create Log</h4>
<hr />
<div style="align-content:center;">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
                <div class="col-md-2"></div>
            <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ProductivityLog.Date" class="control-label"></label>
                <input asp-for="ProductivityLog.Date" class="form-control" />
                <span asp-validation-for="ProductivityLog.Date" class="text-danger"></span>
            </div>
            </div>
             <div class="col-md-4">
            <div class="form-group">
                    <label asp-for="ProductivityLog.GrantProgramID" class="control-label">Grant</label>
                    <select asp-for="ProductivityLog.GrantProgramID" class="form-control">
                        <option value="">Select Grant</option>
                        @foreach(var item in Model.GrantPrograms)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>
    </div>
    <div class="row">
        
     <div class="col-md-2"></div>
    <div class="col-md-8">
        
            <div class="form-group">
                <label asp-for="ProductivityLog.FocusArea" class="control-label">Focus Area</label>
                <textarea asp-for="ProductivityLog.FocusArea" class="form-control"></textarea>
                <span asp-validation-for="ProductivityLog.FocusArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductivityLog.Actions" class="control-label"></label>
                <textarea asp-for="ProductivityLog.Actions" class="form-control"></textarea>
                <span asp-validation-for="ProductivityLog.Actions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductivityLog.Successes" class="control-label"></label>
                <textarea asp-for="ProductivityLog.Successes" class="form-control"></textarea>
                <span asp-validation-for="ProductivityLog.Successes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductivityLog.Improvements" class="control-label"></label>
                <textarea asp-for="ProductivityLog.Improvements" class="form-control"></textarea>
                <span asp-validation-for="ProductivityLog.Improvements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductivityLog.NextSteps" class="control-label">Next Steps</label>
                <textarea asp-for="ProductivityLog.NextSteps" class="form-control"></textarea>
                <span asp-validation-for="ProductivityLog.NextSteps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductivityLog.Challenges" class="control-label"></label>
                <textarea asp-for="ProductivityLog.Challenges" class="form-control"></textarea>
                <span asp-validation-for="ProductivityLog.Challenges" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductivityLog.Notes" class="control-label"></label>
                <textarea asp-for="ProductivityLog.Notes" class="form-control"></textarea>
                <span asp-validation-for="ProductivityLog.Notes" class="text-danger"></span>
            </div>
    </div>
    </div>
    <br />
      
            <div style="text-align: center;" class="form-group col">
                <input type="submit" value="Save Log" class="btn btn-primary" />
            </div>
        </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
