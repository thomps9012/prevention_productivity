@page
@model prevention_productivity.Pages.ProductivityLogs.IndexModel

@{
   ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Productivity Logs</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductivityLog[0].Date)
            </th>
            <th>
               Team Member
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductivityLog[0].FocusArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductivityLog[0].Actions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductivityLog[0].Successes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductivityLog[0].Improvements)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductivityLog[0].NextSteps)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductivityLog[0].Challenges)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductivityLog[0].Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductivityLog[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model.ProductivityLog) {
                <tr>
                    <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => 
                    Model.TeamMember.FirstOrDefault(x => x.Id == item.TeamMemberID).FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FocusArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Actions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Successes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Improvements)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextSteps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Challenges)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                        @if ((await AuthorizationService.AuthorizeAsync(User, item, AuthOperations.Update)).Succeeded)
                        {
                            <a asp-page="./Edit" asp-route-id="@item.LogID">Edit</a>
                            <text> | </text>
                        }
                <a asp-page="./Details" asp-route-id="@item.LogID">Details</a>
                        @if((await AuthorizationService.AuthorizeAsync(User, item, AuthOperations.Delete)).Succeeded)
                        {
                            <text> | </text>
                            <a asp-page="./Delete" asp-route-id="@item.LogID">Delete</a>
                        }
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
